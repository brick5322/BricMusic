QMenu {
	border: 1px solid #CCCCCC;
	border-radius: 3px;
	background-color: #FAFAFC;
	font-size: 10pt;
	font-family: "Microsoft YaHei";
	padding: 5px 0px 5px 0px;
}

QMenu::separator {
	height: 1px;
	background: #CCCCCC;
	margin-left: 2px;
	margin-right: 2px;
}

QMenu::item:selected {
	background-color: #EDEDEF;
}

QMenu::item {
	border: 0px solid transparent;
	background-color: transparent;
	color: black;
	min-height: 25px;
	min-width: 80px;
	margin: 2px 5px 2px 10px;
}